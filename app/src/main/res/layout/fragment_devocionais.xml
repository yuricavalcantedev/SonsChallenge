<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_msgDevocional_guiadoPeloEspirito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Deixe o Espírito fluir através de você!"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_msgDevocional_naoCriado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_msgDevocional_guiadoPeloEspirito"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Você ainda não criou um devocional"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:visibility="visible" />

    <ListView
        android:id="@+id/lv_devocionais_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_criar_devocional"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_criar_devocional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/lv_devocionais_main"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lv_devocionais_main"
        android:layout_marginBottom="9dp"
        android:text="Criar Devocional" />


</RelativeLayout>