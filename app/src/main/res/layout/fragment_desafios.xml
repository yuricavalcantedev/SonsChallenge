<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:id="@+id/tv_desafio_40dias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1.1"
        android:background="@drawable/bg_round_rect"
        android:backgroundTint="@color/challenge_disabled"
        android:gravity="center"
        android:text="Son's Challenge - 40 dias"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tv_desafio_closer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.1"
        android:background="@drawable/bg_round_rect"
        android:backgroundTint="@color/challenge_enabled"
        android:gravity="center"
        android:text="Son's Challenge - Closer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tv_desafio_deeper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.1"
        android:background="@drawable/bg_round_rect"
        android:backgroundTint="@color/challenge_disabled"
        android:gravity="center"
        android:text="Son's Challenge - Deeper"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</LinearLayout>