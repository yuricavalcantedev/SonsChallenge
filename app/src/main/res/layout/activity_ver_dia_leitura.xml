<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="br.heavendevelopment.sonschallenge.VerDiaLeituraActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_verDiaLeitura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
            android:id="@+id/tv_msg_ver_leitura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_verDiaLeitura"
            android:layout_margin="15dp"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text='"Se Jesus precisasse hoje de alguém para chorar, ele chamaria você?"'
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_msg_ver_leitura"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="Desafios"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view_divider"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/textView7"
            android:layout_marginTop="5dp"/>

        <CheckBox
            android:id="@+id/cb_leitura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_msg_ver_leitura"
            android:layout_below="@+id/view_divider"
            android:layout_marginTop="46dp"
            android:text="Leitura - Mt 1-15" />

        <CheckBox
            android:id="@+id/cb_oracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cb_leitura"
            android:layout_below="@+id/cb_leitura"
            android:layout_marginTop="20dp"
            android:text="Oração - 30 minutos" />

        <CheckBox
            android:id="@+id/cb_desafio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cb_oracao"
            android:layout_below="@+id/cb_oracao"
            android:layout_marginTop="22dp"
            android:text="Desafio - Ligar para uma pessoa" />

        <Button
            android:id="@+id/bt_salvar_diaLeitura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:text="Salvar"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/cb_desafio"
            android:layout_alignEnd="@+id/tv_msg_ver_leitura" />

    </RelativeLayout>
